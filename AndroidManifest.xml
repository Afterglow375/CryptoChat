<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.crypto_app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.example.crypto_app.HomeScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.crypto_app.HomeScreenAdapter"
            android:label="@string/title_activity_home_screen_adapter" >
        </activity>
        <activity
            android:name="com.example.crypto_app.ConversationActivity"
            android:label="@string/title_activity_conversation" >
        </activity>
        <activity
            android:name="com.example.crypto_app.AddContactActivity"
            android:label="@string/title_activity_add_contact" >
        </activity>
        <activity
            android:name="com.example.crypto_app.NewMessageActivity"
            android:label="@string/title_activity_new_message" >
        </activity>
    </application>

</manifest>
